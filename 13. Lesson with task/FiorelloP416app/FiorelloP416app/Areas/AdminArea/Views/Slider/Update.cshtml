@model UpdateSliderVM
@{
    ViewData["Title"] = "Update";
}
<div class="container">
    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Slider Update form</h4>
                    <img width="500" src="~/img/@Model.ImageUrl" />
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Image</label>
                            <input asp-for="Photo" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Photo"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a asp-controller="slider" asp-action="index" class="btn btn-light">Go Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationPartial" />
}
